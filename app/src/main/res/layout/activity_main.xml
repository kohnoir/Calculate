<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/ViewCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="end"
        android:hint="0">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <Button
            android:id="@+id/One"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="1" />

        <Button
            android:id="@+id/Two"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="2" />

        <Button
            android:id="@+id/Three"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="3" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <Button
            android:id="@+id/Four"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="4" />

        <Button
            android:id="@+id/Five"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="5" />

        <Button
            android:id="@+id/Six"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="6" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <Button
            android:id="@+id/Seven"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="7" />

        <Button
            android:id="@+id/Eight"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="8" />

        <Button
            android:id="@+id/Nine"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="9" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="6.3"
            android:id="@+id/Zero"
            android:text="0"
            android:gravity="center"
            android:layout_margin="5dp">

        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/Point"
            android:layout_weight="3"
            android:text="."
            android:gravity="center"
            android:layout_margin="5dp">

        </Button>

    </LinearLayout>

</LinearLayout>